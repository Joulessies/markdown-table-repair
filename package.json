{
    "name": "markdown-table-repair",
    "version": "1.0.0",
    "type": "module",
    "description": "A zero-dependency utility that fixes broken Markdown tables generated by AI LLMs",
    "main": "dist/index.cjs",
    "module": "dist/index.esm.js",
    "browser": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.esm.js",
            "browser": "./dist/index.umd.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "rollup -c",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "markdown",
        "table",
        "repair",
        "fix",
        "ai",
        "llm",
        "streaming",
        "parser",
        "gfm",
        "github-flavored-markdown"
    ],
    "author": "Joulessies",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Joulessies/markdown-table-repair.git"
    },
    "bugs": {
        "url": "https://github.com/Joulessies/markdown-table-repair/issues"
    },
    "homepage": "https://github.com/Joulessies/markdown-table-repair#readme",
    "devDependencies": {
        "rollup": "^4.9.0",
        "vitest": "^3.0.0"
    }
}